generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  user
  admin
}

model User {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  name          String?
  supabaseId    String?  @unique @map("supabase_id") // Supabase Auth 用户ID
  avatarUrl     String?  @map("avatar_url")
  provider      String?  // 登录提供商: email, github
  role          UserRole @default(user) // user, admin
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  chats         Chat[]
  userModels    UserModel[]

  @@map("users")
}

model Chat {
  id        String    @id @default(cuid())
  title     String    @default("")
  modelId   String    @map("model_id")
  userId    Int       @map("user_id")
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages  Message[]

  @@index([userId])
  @@map("chats")
}

model Message {
  id        String   @id @default(cuid())
  chatId    String   @map("chat_id")
  role      String   // user, assistant, system
  content   String   @db.Text
  parts     Json?    // 存储附件、UI组件等
  createdAt DateTime @default(now()) @map("created_at")

  chat      Chat     @relation(fields: [chatId], references: [id], onDelete: Cascade)

  @@index([chatId])
  @@map("messages")
}

model UserModel {
  id          String   @id @default(cuid())
  userId      Int      @map("user_id")
  name        String   // Display name for the model
  modelId     String   @map("model_id") // Model endpoint ID for API calls
  baseURL     String   @map("base_url") // API base URL
  apiKey      String   @map("api_key") // Encrypted API key
  description String?  // Optional description
  logoUrl     String?  @map("logo_url") // Model logo URL from Supabase Storage
  systemPrompt String? @map("system_prompt") @db.Text // System prompt for the model
  isDefault   Boolean  @default(false) @map("is_default") // Default model flag
  isPublic    Boolean  @default(false) @map("is_public")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("user_models")
}
